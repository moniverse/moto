// script 2
// A task to setup the environment
task setupEnvironment {
  echo "Setting up the environment..."
  dependenciesInstalled = true
}:shell

// A task to compile the project, depends on setupEnvironment
task compileProject {
  [:setupEnvironment()] // Ensure setupEnvironment is done first
  echo "Compiling the project..."
}:shell

// Main task to run
task main {
  compileProject()
}:moto
// end 
